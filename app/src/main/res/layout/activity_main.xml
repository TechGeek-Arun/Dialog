<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wipro.topgear.com.dialog.MainActivity">


    <TextView
        android:text="Dialogs in Android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/header" />

    <Button
        android:text="ALERT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/alert" />

    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/alert"
        android:background="#000000"
        android:layout_height="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/datelabel"
        android:layout_alignLeft="@+id/alert"
        android:layout_alignStart="@+id/alert"
        android:id="@+id/date" />

    <TextView
        android:text="Time  :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:id="@+id/timelabel"
        android:layout_below="@+id/alert"
        android:layout_toLeftOf="@+id/header"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:layout_above="@+id/timebutton"
        android:layout_toRightOf="@+id/date"
        android:layout_toEndOf="@+id/date" />

    <TextView
        android:text="Date  :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:id="@+id/datelabel"
        android:layout_below="@+id/timebutton"
        android:layout_alignRight="@+id/timelabel"
        android:layout_alignEnd="@+id/timelabel"
        android:layout_alignLeft="@+id/timelabel"
        android:layout_alignStart="@+id/timelabel" />

    <Button
        android:text="Select Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timebutton"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/timelabel"
        android:layout_alignLeft="@+id/timelabel"
        android:layout_alignStart="@+id/timelabel" />

    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/timebutton"
        android:background="#000000"
        android:layout_height="5dp" />

    <Button
        android:text="Select Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datebutton"
        android:layout_below="@+id/date"
        android:layout_alignRight="@+id/timebutton"
        android:layout_alignEnd="@+id/timebutton"
        android:layout_marginTop="22dp" />

</RelativeLayout>
